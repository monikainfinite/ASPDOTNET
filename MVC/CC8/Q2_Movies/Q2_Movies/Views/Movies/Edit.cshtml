@model Q2_Movies.Models.Movies
@{
    ViewBag.Title = "Edit";
}


<h2>Edit Movie</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.MovieId)

    <p>Movie Name</p>
    @Html.TextBoxFor(m => m.MovieName)

    <p>Director Name</p>
    @Html.TextBoxFor(m => m.DirectorName)

    <p>Date Of Release</p>
    @Html.TextBoxFor(m => m.DateOfRelease, "{0:yyyy-MM-dd}", new { type = "date" })

    <br />
    <br />
    <input type="submit" value="Update" />
}


